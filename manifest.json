{
  "name": "Reels Counter",
  "description": "An extension to count the number of reels scrolled",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://instagram.com/reels/*",
        "https://youtube.com/shorts/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "extension.png"
  },
  "permissions": [
    "activeTab", 
    "webNavigation", 
    "scripting", 
    "storage", 
    "tabs"
  ],
  "host_permissions": [
    "https://instagram.com/*",
    "https://youtube.com/*"
  ]
}
